<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/rounded_edit_text"
  android:orientation="horizontal">

  <ImageView
    android:layout_width="@dimen/bottom_navigation_view_height"
    android:layout_height="@dimen/bottom_navigation_view_height"
    android:contentDescription="@string/profile"
    android:src="@drawable/ic_common_profile_foreground" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_top"
    android:layout_marginEnd="@dimen/margin_top"
    android:orientation="vertical">

    <TextView
      android:id="@+id/social_media_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:text="@string/username"
      android:textSize="@dimen/size_for_longer_text"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/social_media_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text" />

    <TextView
      android:id="@+id/social_media_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:text="@string/time_ago"
      android:textColor="@color/gray" />

    <LinearLayout
      android:id="@+id/chirp_card_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageButton
        android:id="@+id/upvote_button"
        android:layout_width="@dimen/social_media_card_button"
        android:layout_height="@dimen/social_media_card_button"
        android:contentDescription="@string/upvote_button"
        android:src="@drawable/ic_social_media_upvote" />

      <TextView
        android:id="@+id/upvote_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/social_media_counter_margin"
        android:layout_gravity="center" />

      <ImageButton
        android:id="@+id/downvote_button"
        android:layout_width="@dimen/social_media_card_button"
        android:layout_height="@dimen/social_media_card_button"
        android:contentDescription="@string/downvote_button"
        android:layout_marginStart="@dimen/social_media_button_margin"
        android:src="@drawable/ic_social_media_downvote" />

      <TextView
        android:id="@+id/downvote_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/social_media_counter_margin"
        android:layout_gravity="center" />

      <ImageButton
        android:id="@+id/heart_button"
        android:layout_width="@dimen/social_media_card_button"
        android:layout_height="@dimen/social_media_card_button"
        android:contentDescription="@string/love_button"
        android:layout_marginStart="@dimen/social_media_button_margin"
        android:src="@drawable/ic_social_media_heart" />

      <TextView
        android:id="@+id/heart_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/social_media_counter_margin"
        android:layout_gravity="center" />

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

      <ImageButton
        android:id="@+id/delete_chirp_button"
        android:layout_width="@dimen/social_media_card_button"
        android:layout_height="@dimen/social_media_card_button"
        android:contentDescription="@string/delete_button"
        android:src="@drawable/ic_social_media_delete_foreground"
        android:visibility="gone" />
    </LinearLayout>

  </LinearLayout>

</LinearLayout>
