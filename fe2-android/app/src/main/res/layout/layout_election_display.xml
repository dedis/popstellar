<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <import type="com.github.dedis.student20_pop.model.event.EventCategory" />
        <variable
            name="election"
            type="com.github.dedis.student20_pop.model.Election" />
        <variable
            name="view_model"
            type="com.github.dedis.student20_pop.detail.LaoDetailViewModel" />
        <variable
            name="eventCategory"
            type="com.github.dedis.student20_pop.model.event.EventCategory" />
    </data>

    <LinearLayout
        android:id="@+id/election_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/election_layout"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/election_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@{ `Election : `+election.name}"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/election_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/election_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                tools:textSize="15dp" />


        </LinearLayout>

        <Button
            android:id="@+id/election_action_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ACTION" />


        <Button
            android:id="@+id/enter_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Details" />

        <ImageButton
            android:id="@+id/election_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="manage election"
            android:src="@drawable/ic_baseline_edit_24"
            android:visibility="@{view_model.isOrganizer() &amp;&amp; (eventCategory == EventCategory.PRESENT || eventCategory == EventCategory.FUTURE) ? View.VISIBLE : View.GONE}" />

    </LinearLayout>

</layout>