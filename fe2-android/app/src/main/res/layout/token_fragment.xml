<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:id="@+id/fragment_token"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/token_qr_top_margin"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/token_qr_code"
      android:layout_width="@dimen/qr_code_size"
      android:layout_height="@dimen/qr_code_size"
      android:layout_gravity="center"
      android:contentDescription="@string/qr_code_token_content" />

    <TextView
      android:id="@+id/token_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/text_medium_emphasis"
      android:layout_marginHorizontal="@dimen/margin_text"
      android:layout_marginTop="@dimen/margin_text_small"
      android:layout_gravity="center"
      android:gravity="center" />

    <Button
      android:id="@+id/token_copy_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/copy_button_horizontal_margin"
      android:text="@string/copy_to_clipboard"
      android:textAllCaps="false" />

  </LinearLayout>
</layout>
