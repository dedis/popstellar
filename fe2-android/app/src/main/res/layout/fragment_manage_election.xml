<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name="lao"
        type="com.github.dedis.student20_pop.model.Lao" />

        <variable
            name="election"
            type="com.github.dedis.student20_pop.model.Election" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_manage_election"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/election_setup_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/election_setup_fields_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/election_setup_scrollview">

                <TextView
                    android:id="@+id/manage_election_lao_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="16dp"
                    android:text="@{lao.name}"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/manage_election_presentation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="141dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/voting_management"
                    android:textSize="18sp"
                    android:textStyle="italic" />


                <LinearLayout
                    android:id="@+id/manage_election_details"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/manage_election_title">


                    <EditText
                        android:id="@+id/manage_election_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="@{election.name}"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/election_setup_presentation_title" />

                    <LinearLayout
                        android:id="@+id/end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/manage_election_title">

                        <TextView
                            android:id="@+id/end_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:autofillHints="false"
                            android:text="End Time :"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/displayed_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginStart="79dp"
                            android:autofillHints="false"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/current_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/manage_election_title">

                        <TextView
                            android:id="@+id/current_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:autofillHints="false"
                            android:text="Current Time :"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/displayed_current_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="50dp"
                            android:autofillHints="false"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>






                </LinearLayout>

                <Button
                    android:id="@+id/election_terminate_button"
                    style="@style/Theme.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/terminate_election"
                    app:layout_constraint="@id/manage_election_details" />


            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>