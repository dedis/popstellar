<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_container_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/margin_text"
    android:orientation="vertical">

    <TextView
      android:id="@+id/server_url_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_top"
      android:gravity="start"
      android:text="@string/server_url"
      android:textSize="@dimen/size_title"
      app:layout_constraintTop_toTopOf="parent"
      android:textStyle="bold" />

    <EditText
      android:id="@+id/entry_box_server_url"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_top"
      android:autofillHints=""
      android:hint="@string/text_hint_server_url"
      app:layout_constraintTop_toBottomOf="@id/server_url_title"
      android:inputType="textUri" />

    <Button
      android:id="@+id/button_apply"
      style="@style/Theme.AppCompat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      android:gravity="center"
      android:text="@string/apply_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/entry_box_server_url" />

    <TextView
      android:id="@+id/settings_storage_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/storage_title"
      android:textSize="@dimen/size_title"
      android:layout_marginTop="@dimen/settings_margin_in_between_sections"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/button_apply" />

    <Button
      android:id="@+id/settings_clear_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/settings_storage_title"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="@string/clear_text"
      android:backgroundTint="@color/red" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
