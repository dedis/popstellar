<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/tab_witness_message"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_horizontal_tab_witness_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="@dimen/guideline_horizontal_tab" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_tab_witness_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="@dimen/guideline_vertical_tab_wallet" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical2_tab_witness_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.73" />

  <Button
    android:id="@+id/tab_witness_message_button"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:text="@string/witness_messages"
    android:textSize="@dimen/size_small"
    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_tab_witness_message"
    app:layout_constraintEnd_toEndOf="@+id/guideline_vertical2_tab_witness_message"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_tab_witness_message"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
