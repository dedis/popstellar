<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="view_model"
            type="com.github.dedis.popstellar.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_server_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_text"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/enter_server_url"
                android:textSize="@dimen/size_title"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entry_box_server_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:autofillHints=""
                android:hint="@string/text_entry_server_url"
                android:afterTextChanged="@{(editable) -> view_model.setServerUrl(editable.toString())}"
                android:inputType="textUri"
                android:text="@{view_model.getServerUrl().toString()}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_button"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_server_url"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_button"
                    android:enabled="@{entryBoxServerUrl.text.length() > 0}"
                    android:gravity="center"
                    android:text="@string/text_button_set" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
