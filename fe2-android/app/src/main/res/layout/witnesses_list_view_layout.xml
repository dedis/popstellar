<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <variable
      name="witness"
      type="String" />

    <variable
      name="position"
      type="int" />

    <variable
      name="viewModel"
      type="com.github.dedis.popstellar.ui.detail.LaoDetailViewModel" />

    <variable
      name="listener"
      type="com.github.dedis.popstellar.ui.detail.witness.WitnessDeleteListener" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/text_view_witness_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{`Witness `+ position + ` ID : ` + witness}"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
      android:id="@+id/image_button_delete_witness"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?android:selectableItemBackground"
      android:contentDescription="@string/delete_a_witness"
      android:onClick="@{() -> listener.onDeleteClicked(witness) }"
      android:src="@drawable/ic_baseline_delete_24"
      android:visibility="@{viewModel.isOrganizer ? View.VISIBLE : View.GONE}"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
