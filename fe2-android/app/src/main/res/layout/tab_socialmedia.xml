<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_socialmedia_only"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_tab_socialmedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_horizontal_tab" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_tab_socialmedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_vertical_tab_wallet" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal2_tab_socialmedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_horizontal_tab_second_row" />

    <Button
        android:id="@+id/tab_socialmedia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/chirp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal2_tab_socialmedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_tab_socialmedia"
        app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_tab_socialmedia" />
</androidx.constraintlayout.widget.ConstraintLayout>