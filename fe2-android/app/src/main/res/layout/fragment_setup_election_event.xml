<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/fragment_setup_election_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/election_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:text="CANCEL" />

        <Button
            android:id="@+id/election_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:enabled="false"
            android:text="@string/submit" />

        <include
            android:id="@+id/election_setup_date"
            layout="@layout/layout_enter_date"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="502dp" />

        <include
            android:id="@+id/election_setup_time"
            layout="@layout/layout_enter_time"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="450dp" />

        <EditText
            android:id="@+id/election_setup_name"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="51dp"
            android:layout_marginBottom="554dp"
            android:autofillHints="false"
            android:hint="@string/election_name"
            android:inputType="text"
            android:lineSpacingExtra="8sp"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/election_setup_spinner"
            android:layout_width="161dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="377dp"
            android:background="@android:drawable/btn_dropdown"
            android:clickable="true"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/LAOname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="141dp"
            android:layout_marginTop="16dp"
            android:text="@string/lao_name"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/election_setup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="632dp"
            android:text="@string/election_setup"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/voting_method"
            android:layout_width="160dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="228dp"
            android:layout_marginBottom="405dp"
            android:text="Select a voting method"
            android:textColor="#7E000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/election_question"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="372dp"
            android:ems="10"
            android:hint="Question:"
            android:inputType="textPersonName" />

        <Switch
            android:id="@+id/write_in"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="266dp"
            android:clickable="true"
            android:text="Allow write in"
            android:textColor="#7E000000"
            android:textStyle="bold"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_ballot_option"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="143dp"
            android:layout_marginBottom="145dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:elevation="0dp"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <EditText
            android:id="@+id/ballot_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="199dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="ballot option"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ballot_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="146dp"
            android:ems="10"
            android:hint="ballot option"
            android:inputType="textPersonName" />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="414dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-3dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"></LinearLayout>


    </RelativeLayout>
</layout>