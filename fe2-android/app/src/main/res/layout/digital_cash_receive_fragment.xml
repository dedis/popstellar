<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_digital_cash_receive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.digitalcash.DigitalCashReceiveFragment">

    <TextView
      android:id="@+id/digital_cash_receive_address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/style_border"
      android:layout_margin="@dimen/main_horizontal_margin"
      android:text="@string/digital_cash_my_address"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/digital_cash_receive_qr"
      android:layout_width="@dimen/qr_digital_cash"
      android:layout_height="@dimen/qr_digital_cash"
      android:contentDescription="@string/digital_cash_content_description_qr_receive"
      android:foregroundGravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/digital_cash_receive_address" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
