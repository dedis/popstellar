<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="materialButtonStyle">@style/Widget.App.Button</item>
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="button_style">
    <item name="android:backgroundTint">@color/colorPrimary</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="title_style">
    <item name="android:textSize">@dimen/size_title</item>
    <item name="android:layout_margin">@dimen/margin_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="explication_welcome_style">
    <item name="android:textSize">@dimen/size_section_title</item>
    <item name="android:layout_marginHorizontal">@dimen/margin_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="explication_text_style">
    <item name="android:textSize">@dimen/size_body</item>
    <item name="android:layout_marginHorizontal">@dimen/margin_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="card_view_title">
    <item name="android:textSize">@dimen/size_section_title</item>
    <item name="android:layout_marginHorizontal">22dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="properties_section_title">
    <item name="android:textSize">@dimen/size_section_title</item>
    <item name="android:layout_marginTop">@dimen/properties_section_margin</item>
    <item name="android:layout_marginHorizontal">22dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="properties_section_text">
    <item name="android:textSize">@dimen/size_section_title</item>
    <item name="android:layout_marginTop">@dimen/properties_title_margin</item>
    <item name="android:layout_marginHorizontal">22dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="style_border">
    <item name="android:textSize">@dimen/size_title</item>
    <item name="android:layout_margin">@dimen/margin_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/border</item>
    <item name="android:paddingHorizontal">30dp</item>
  </style>

  <style name="element_title">
    <item name="android:textSize">@dimen/history_card_title</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="history_element_field">
    <item name="android:textSize">@dimen/history_card_element</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_marginStart">12dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:insetTop">5dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:minWidth">80dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:textSize">16sp</item>
  </style>
</resources>
