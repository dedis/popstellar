{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/dedis/student_21_pop/master/protocol/query/method/message/data/dataPropose.json",
    "description": "Match a propose query",
    "type": "object",
    "properties": {
        "object": {
            "const": "consensus"
        },
        "action": {
            "const": "propose"
        },
        "message_id": {
            "description": "message_id of the elect message",
            "type": "string"
        },
        "created_at": {
            "description": "[Timestamp] creation time",
            "type": "integer",
            "minimum": 0
        },
        "value": {
            "type": "object",
            "properties": {
                "proposed_try": {
                    "type": "integer"
                },
                "proposed_value": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "required": [
                "proposed_try",
                "proposed_value"
            ]
        },
        "acceptor-signature": {
            "description": "Signatures of all received Promise messages",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "object",
        "action",
        "message_id",
        "created_at",
        "value",
        "acceptor-signature"
    ]
}
