{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/dedis/student_21_pop/master/protocol/query/method/message/data/dataPromise.json",
    "description": "Match a promise query",
    "type": "object",
    "properties": {
        "object": {
            "const": "consensus"
        },
        "action": {
            "const": "promise"
        },
        "id": {
            "type": "string",
            "contentEncoding": "base64",
            "$comment": "Hash : SHA256('consensus'||lao_id||timestamp||name)"
        },
        "message_id": {
            "type": "string",
            "description": "message_id of the elect message"
        },
        "created_at": {
            "description": "[Timestamp] creation time",
            "type": "integer",
            "minimum": 0
        },
        "value": {
            "type": "object",
            "properties": {
                "accepted_try": {
                    "type": "integer"
                },
                "accepted_value": {
                    "type": "boolean"
                },
                "promised_try": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "accepted_try",
                "accepted_value",
                "promised_try"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "object",
        "action",
        "id",
        "message_id",
        "created_at",
        "value"
    ]
}
