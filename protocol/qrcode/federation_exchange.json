{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/dedis/popstellar/work-fe1-ljankoschek-LinkedOrgUI/protocol/qrcode/federation_exchange.json",
    "title": "QRCode data for exchanging information between the organizers in the federation protocol",
    "description": "Match a data contained in a qrcode encoding lao_id, server_address, public_key (organizer), challenge",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "lao_id": {
            "type": "string",
            "contentEncoding": "base64",
            "$comment": "ID of the remote LAO"
        },
        "server_address": {
            "type": "string",
            "pattern": "^(ws|wss):\/\/.*(:\\d{0,5})?\/.*$",
            "$comment": "public address of the remote organizer server"
        },
        "public_key": {
            "type": "string",
            "contentEncoding": "base64",
            "$comment": "public key of the remote organizer"
        },
        "challenge": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string",
                    "contentEncoding": "hex",
                    "pattern": "^[0-9a-fA-F]{64}$",
                    "$comment": "A 32 bytes array encoded in hexadecimal"
                },
                "valid_until": {
                    "type": "integer",
                    "description": "[Timestamp] of the expiration time",
                    "minimum": 0
                }
            },
            "additionalProperties": false,
            "required": ["value", "valid_until"]
        }
    },
    "required": ["lao_id", "server_address", "public_key", "challenge"]
}
