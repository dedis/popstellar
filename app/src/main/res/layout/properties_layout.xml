<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_toEndOf="@id/organization_name"
        android:layout_alignParentEnd="true"
        android:contentDescription="edit_button"
        app:layout_constraintLeft_toRightOf="@id/organization_name"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/organization_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_title"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/witness_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_body"
        android:layout_below="@id/organization_name"
        app:layout_constraintTop_toBottomOf="@id/organization_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>